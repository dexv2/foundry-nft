pragma solidity 0.8.18;

import {Test, console} from "forge-std/Test.sol";
import {MoodNft} from "../src/MoodNft.sol";
import {DeployMoodNft} from "../script/DeployMoodNft.s.sol";

contract MoodNftIntegrationsTest is Test {
    MoodNft moodNft;
    address USER = makeAddr("user");
    string SAD_SVG_URI = "data:application/json;base64,";
    string HAPPY_SVG_URI = "data:application/json;base64,";

    function setUp() public {
        DeployMoodNft deployer = new DeployMoodNft();
        moodNft = deployer.run();
    }

    function testViewTokenURIIntegration() public {
        vm.prank(USER);
        moodNft.mintNft();
        assertEq(moodNft.tokenURI(0), HAPPY_SVG_URI);
    }

    function testFlipTokenToSad() public {
        vm.startPrank(USER);
        moodNft.mintNft();
        moodNft.flipMood(0);
        vm.stopPrank();
        console.log(moodNft.tokenURI(0));
        assertEq(moodNft.tokenURI(0), SAD_SVG_URI);
    }
}
